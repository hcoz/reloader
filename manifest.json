{
    "manifest_version": 2,
    "name": "Reloader",
    "description": "Reload a specific tab for required interval.",
    "version": "1.0",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "alarms"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}
